                </aside>
                <% end %>
                <aside class="single_sidebar_widget popular_post_widget">
                    <h3 class="widget_title">Popular Posts</h3>
                    <% @films_new.each do |film| %>
                    <div class="media post_item">
                    		<%= image_tag film.picture_url, alt: "post", class: "image-new" %>
                        <div class="media-body">
                            <a href="blog-details.html"><h3><%= film.name %></h3></a>
                            <p>02 Hours ago</p>
                        </div>
                    </div>
                    <% end %>
                    <div class="br"></div>
                </aside>
                <%= render "layouts/category" %>
            </div>
