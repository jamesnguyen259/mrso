<br><br>
<div class="container-fluid well span6">
	<div class="row-fluid">
        <div class="container">
            <div class="row">
                <div class="col-md-9">
                    <div class="card">
                        <div class="card-body">
                            <% provide(:title, "Edit user") %>
                            <hr>
                            <center>
                              <h3>Edit Profile</h3>
                              <div class="avatar">
                                 <a><%= image_tag @user.avatar_url, class: "user-avatar-size" %></a>
                              </div>
                            </center>
                            <br>
                            <br>
                            <div class="row">
                                <div class="col-md-6 col-md-offset-3">
                                  <%= form_for(@user) do |f| %>
                                    <%= f.label :email %>
                                    <%= f.email_field :email, class: 'form-control' %>
                                    <br>
                                    <%= f.file_field :avatar, class: "form-control" %>
                                    <br>
                                    <hr>
                                    <%= link_to "Change your password", edit_user_registration_path %>
                                    <br>
                                    <br>
                                    <%= f.submit "Save", class: "btn btn-success" %>
                                    <br>
                                    <br>
                                  <% end %>
                                  <br>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
