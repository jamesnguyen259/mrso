
<br><br>
<div class="row">
        <div class="col-md-2 col-md-offset-5"></div>
	<div class="row-fluid">
                <div class="avatar">
                   <a>
                    <%= image_tag @user.avatar_url, class: "user" %>
                   </a>
                </div>
            <div class="span8">
                <h6>Email: <%= @user.email %></h6>
            </div>
            <% if current_user.id == @user.id %>
                <div class="span2">
                    <div class="btn-group">
                        <%= link_to "Edit", edit_user_path, class: "btn btn-success" %>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</div>
