<div class="container">
    <div class="row">
        <div class="col-lg-6">
          <div class="blog_right_sidebar">
            <h3 class="mb-30 title_color">Sign up</h3>
            <h6 class="typo-list">By creating an account with our web</h6>
            <hr>
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <%= devise_error_messages! %>
                <div class="mt-10">
                  <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "single-input" %>
                </div>
                <div class="mt-10">
                  <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br />
                <%= f.password_field :password, placeholder: "Password", class: "single-input" %>
                </div>
                <div class="mt-10">
                <%= f.password_field :password_confirmation, placeholder: "Password Confirmation", class: "single-input" %>
                </div>
                <br>
              <div class="actions pull-right">
                <%= f.submit "Sign up", class: "genric-btn success circle arrow"%>
              </div>
                <br>
            <% end %>
        </div>
      </div>
        <div class="col-lg-6">

          <div class="blog_right_sidebar">
            <h3 class="mb-30 title_color">Sign in</h3>
            <h6 class="typo-list">Sign in to MSRO</h6>
            <hr>
              <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="mt-10">
                  <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "single-input" %>
                </div>
                <div class="mt-10">
                <%= f.password_field :password, placeholder: "Password", class: "single-input" %>
                </div>
                <br>
                <% if devise_mapping.rememberable? -%>
                  <div class="field">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me %>
                  </div>
                <% end -%>

              <div class="actions pull-right">
                <%= f.submit "Sign in", class: "genric-btn success circle arrow"%>
              </div>
              <br>
            <% end %>
            <p><%= render "devise/shared/links" %></p>
        </div>
        </div>
    </div>
</div>
<br><br>
